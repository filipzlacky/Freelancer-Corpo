    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Offer.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Offer.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Offer.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Offer.Description)
        </dd>
        <dt>
