<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - FreelancerCorp Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-dark navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("FreelancerCorp", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">             
                <ul class="nav navbar-nav">
                    <li class="nav nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" id="dropdownMenuLink" data-toggle="dropdown">Freelancers<span class="fa fa-user"></span><b class="caret grey"></b></a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
                            <div class="col-md-10">
                                <div class="dropdown-divider"></div>
                                @Html.ActionLink("Create", "Create", "Freelancers", null, new { @class = "dropdown-item" })
                                <div class="dropdown-divider"></div>
                                @Html.ActionLink("Show all", "Index", "Freelancers", null, new { @class = "dropdown-item" })
                            </div>
                        </div>
                    </li>
                </ul>
                <ul class="nav navbar-nav">
                    <li class="nav nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" id="dropdownMenuLink" data-toggle="dropdown">Offers<span class="fa fa-user"></span><b class="caret grey"></b></a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
                            <div class="col-md-10">                                
                                <div class="dropdown-divider"></div>
                                @Html.ActionLink("Show all", "Index", "Offers", null, new { @class = "dropdown-item" })
                            </div>
                        </div>
                    </li>
                </ul>
                <ul class="nav navbar-nav">
                    <li class="nav nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" id="dropdownMenuLink" data-toggle="dropdown">Corporations<span class="fa fa-user"></span><b class="caret grey"></b></a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
                            <div class="col-md-10">
                                <div class="dropdown-divider"></div>
                                @Html.ActionLink("Create", "Create", "Corporations", null, new { @class = "dropdown-item" })
                                <div class="dropdown-divider"></div>
                                @Html.ActionLink("Show all", "Index", "Corporations", null, new { @class = "dropdown-item" })
                            </div>
                        </div>
                    </li>
                </ul>
                <ul class="nav navbar-nav">
                    @if (Request.IsAuthenticated)
                    {
                        <li class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" id="dropdownMenuLink" data-toggle="dropdown"><span class="fa fa-user"></span> @User.Identity.Name.Split('@')[0] <b class="caret grey"></b></a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                <div class="col-md-10">
                                    <div class="dropdown-header">Account management</div>
                                    <div class="dropdown-divider"></div>
                                    @Html.ActionLink("Profile", "Profile", "Accounts", null, new { @class = "dropdown-item" })
                                    <div class="dropdown-divider"></div>
                                    @Html.ActionLink("Create Offer", "Create", "Offers", null, new { @class = "dropdown-item" })
                                    <div class="dropdown-divider"></div>
                                    @Html.ActionLink("Logout", "Logout", "Accounts", null, new { @class = "dropdown-item" })
                                </div>                                
                            </div>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" id="dropdownMenuLink" data-toggle="dropdown">Account (DON'T CLICK!)<span class="fa fa-user"></span><b class="caret grey"></b></a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
                                <div class="dropdown-header">Get started</div>
                                <div class="col-md-10">
                                    <div class="dropdown-divider"></div>
                                    @Html.ActionLink("Register (Listen.. don't do it)", "RegisterFreelancer", "Accounts", null, new { @class = "dropdown-item" })
                                    <div class="dropdown-divider"></div>
                                    @Html.ActionLink("Log in (!JUST DON'T!)", "Login", "Accounts", null, new { @class = "dropdown-item" })
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p class="text-muted float-right">&copy; @DateTime.Now.Year - Incredible APP by Filip Zlacký (Nika Kunzová helped a little as well)</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
