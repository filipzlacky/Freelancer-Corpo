@model FreelancerCorp.PresentationLayer.Models.Corporations.CorporationDetailViewModel

@{
    ViewBag.Title = "Corporation details";
}

<h2>Here is the place to look at details about the ULTIMATE corporation:</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Corporation.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Corporation.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Corporation.Info)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Corporation.Info)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Corporation.AverageRating)
        </dt>

        <dd>
            @if (Model.Corporation.AverageRating.HasValue)
            {
                <strong class="text-danger" style="color:darkgreen">@string.Format("{0:N2}", @Model.Corporation.AverageRating)</strong>
            }
            else
            {
                <strong class="text-danger">No rated yet</strong>
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Corporation.Email)
        </dt>

        <dd>
            <a href="mailto:@Model.Corporation.Email">@Model.Corporation.Email</a>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Corporation.PhoneNumber)
        </dt>

        <dd>
            @if (!string.IsNullOrEmpty(@Model.Corporation.PhoneNumber))
            {
                <a href="tel:@Model.Corporation.PhoneNumber">@Model.Corporation.PhoneNumber</a>
            }
            else
            {
                <p>
                    No phone number given.
                </p>
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Corporation.Address)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Corporation.Address)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Corporation.Location)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Corporation.Location)
        </dd>
    </dl>
</div>

<h4> Created Offers: </h4>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Category
        </th>
        <th>
            Price
        </th>
    </tr>
    @foreach (var offer in Model.Corporation.Offers)
    {

        <tr>
            <td>
                <strong class="text-danger">@offer.Name</strong>
            </td>
            <td>
                <strong class="text-danger">@offer.Category</strong>
            </td>
            <td>
                <strong class="text-danger">@offer.Price</strong>
            </td>
            <td>
                @Html.ActionLink("Details", "Details", "Offers", new { id = offer.Id }, new { @class = "navbar-brand" })
            </td>
        </tr>

    }
</table>

<h4> Ratings for this user: </h4>
<table class="table">
    <tr>
        <th>
            Creator
        </th>
        <th>
            Score
        </th>
    </tr>
    @foreach (var rating in Model.Corporation.Ratings)
    {
        <tr>
            <td>
                <strong class="text-danger">@rating.creator</strong>
            </td>
            <td>
                <strong class="text-danger">@rating.rating.Score</strong>
            </td>
            <td>
            </td>
            <td>
                @Html.ActionLink("Details", "Details", "Ratings", new { id = rating.rating.Id }, new { @class = "navbar-brand" })
            </td>
        </tr>

    }
</table>

<p>
    @Html.ActionLink("Back to List", "Index")
    @if (Request.IsAuthenticated)
    {
        if (User.Identity.Name != Model.CorporationUserName)
        {
            @Html.ActionLink("Add rating", "Create", "Ratings", new { id = Model.Corporation.Id, ratedUserName = Model.CorporationUserName }, null)
        }
    }
</p>
